pipeline{
	agent any
	environment{
		NEW_VERSION='1.3.0'
	}
	stages{
		stage('Init'){
			steps{
			  echo "Hi this is babul ${NEW_VERSION}"
			}
		}
		stage('maven build'){
			steps{
				sh 'mvn -f springsecsection9/pom.xml clean package'
			}
			post{
				success {
                    		echo 'Now Archiving artifacts'
                    		archiveArtifacts artifacts:'**/*.jar'
                		}
		
			}
		}
		stage('docker build'){
			steps{
				echo 'Build docker image'
				sh 'docker build  -t springsecurityweb -f springsecsection9/Dockerfile .'
			}
		}
	}
	
}
